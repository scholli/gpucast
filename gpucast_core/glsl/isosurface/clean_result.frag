#version 420 core
#extension GL_NV_gpu_shader5 : enable
#extension GL_EXT_shader_image_load_store : enable

/********************************************************************************
* constants
********************************************************************************/                       

/********************************************************************************
* uniforms
********************************************************************************/
layout (size4x32) uniform image2D   colorattachment;
layout (size1x32) uniform image2D   depthattachment;

uniform int                         width;
uniform int                         height;

/********************************************************************************
* input
********************************************************************************/

/********************************************************************************
* output
********************************************************************************/

/********************************************************************************
* functions
********************************************************************************/
void main(void)
{
  imageStore ( colorattachment,  ivec2(gl_FragCoord.xy), vec4(0.0) );
  imageStore ( depthattachment,  ivec2(gl_FragCoord.xy), vec4(1.0) );
  discard; // do not write into framebuffer
}

